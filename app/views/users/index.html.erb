<h1>Listing Users</h1>

<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= button_to "Send Email", send_email_users_path, params: {user_id: user.id},  method: 'post' %>
</td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>